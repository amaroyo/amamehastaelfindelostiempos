<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">


<struts-config>	
	
	<form-beans>
	    
		<form-bean name="FileUploadForm" type="es.oyssen.mrm.struts.forms.ficheros.FileUploadForm" />
		
	</form-beans>
	

	<action-mappings>

		<action path="/administrar/listados" forward="/jsp/web/administrar/listados.jsp" />
		<action path="/administrar/certificados" forward="/jsp/web/administrar/certificados.jsp" />
		
		<action path="/administrar/importarAlumnos" name="FileUploadForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.administrar.ImportarAlumnosAction">
			<exception type="java.lang.Exception" key="error.importar.alumnos" path="/administrar/listados.do"></exception>
			<forward name="success" path="/administrar/listados.do" />
		</action>
		<action path="/administrar/importarProfesores" name="FileUploadForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.administrar.ImportarProfesoresAction">
			<exception type="java.lang.Exception" key="error.importar.profesores" path="/administrar/listados.do"></exception>
			<forward name="success" path="/administrar/listados.do" />
		</action>
		<action path="/administrar/importarUsuarios" name="FileUploadForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.administrar.ImportarUsuariosAction">
			<exception type="java.lang.Exception" key="error.importar.usuarios" path="/administrar/listados.do"></exception>
			<forward name="success" path="/administrar/listados.do" />
		</action>
		
		
	
	</action-mappings>

</struts-config>