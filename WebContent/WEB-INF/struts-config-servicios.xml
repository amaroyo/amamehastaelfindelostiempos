<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>	
	
	<form-beans>
		<form-bean name="GridServiciosForm" type="es.oyssen.mrm.struts.forms.servicios.GridServiciosForm" />
		<form-bean name="EditarServicioForm" type="es.oyssen.mrm.struts.forms.servicios.ServicioForm" />
		
		<form-bean name="GridFicherosForm" type="es.oyssen.mrm.struts.forms.ficheros.GridFicherosForm" />
		<form-bean name="EditarFicheroForm" type="es.oyssen.mrm.struts.forms.ficheros.FicheroForm" />
		
		<form-bean name="SubirFicheroForm" type="es.oyssen.mrm.struts.forms.ficheros.SubirFicheroForm" />
				
	</form-beans>
	

	<action-mappings>
		<action path="/servicios/inicio" forward="/jsp/web/servicios/inicio.jsp" />
		
		<action path="/servicios/gridservicios" name="GridServiciosForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.servicios.GridServiciosAction" />

		<action path="/servicios/editarservicio" name="EditarServicioForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.servicios.EditarServicioAction"  />
		
		<action path="/servicios/actualizarservicio" name="EditarServicioForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.servicios.EditarServicioAction"  />


		<action path="/servicios/gridficheros" name="GridFicherosForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.ficheros.GridFicherosAction" />

		<action path="/servicios/editarfichero" name="EditarFicheroForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.ficheros.EditarFicheroAction"  />
		
		<action path="/servicios/actualizarfichero" name="EditarFicheroForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.ficheros.EditarFicheroAction"  />

		<action path="/servicios/subir" forward="/jsp/web/servicios/subir.jsp" />		
		
		<action path="/servicios/descargar" name="DescargaFichero" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.ficheros.DescargarFicheroAction" />

		<action path="/servicios/subirFichero" name="SubirFicheroForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.ficheros.SubirFicheroAction">
			<exception type="java.lang.Exception" key="error.subir.fichero" path="/servicios/subir.do"></exception>
			<forward name="success" path="/servicios/subir.do" />
		</action>
		
		<action path="/servicios/gridleads" name="GridServiciosForm" scope="request"  type="es.oyssen.mrm.struts.actions.servicios.GridLeadsAction" />
		
		<action path="/servicios/exportarservicios" name="GridServiciosForm" scope="request" validate="false" type="es.oyssen.mrm.struts.actions.servicios.ExportarServiciosAction" />
		
	</action-mappings>

</struts-config>